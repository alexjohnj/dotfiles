;;; xcodeproj-mode.el --- Xcode project file mode -*- lexical-binding: t -*-

(defcustom xcodeproj-mode-hook nil
  "Hook run when entering xcodeproj-mode"
  :type 'hook
  :group 'xcodeproj-mode)

;;;###autoload
(define-derived-mode xcodeproj-mode text-mode "Xcode Project"
  "Mode for editing Xcode Project Files")

;;;###autoload
(add-to-list 'auto-mode-alist '("\\.pbxproj\\'" . xcodeproj-mode))

(provide 'xcodeproj-mode)
